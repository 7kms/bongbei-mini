page{
    min-height: 100%;
    padding-bottom: 88rpx;
    background-color:  #FBFBFB;
}
.item{
    display: flex;
    align-items: center;
    padding-right: 30rpx;
    height: 160rpx;
    background-color: #fff;
}
.item.item-header{
    height: 80rpx;
}
.item-status{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 90rpx;
    height: 80rpx;
}
.item-info{
    flex: 1;
    display: flex;
    height: 100%;
    align-items: center;
    border-bottom: 1px solid  #E7E7E7;
}
.info-img{
    width: 120rpx;
    height: 120rpx;
}
.info-desc{
    flex: 1;
    display: flex;
    flex-direction: column;
    color: #aaa;
    margin-left: 25rpx;
}
.info-desc .info-name{
    font-size: 26rpx;
    color: #686E71;
}
.info-desc .info-number{
    font-size: 26rpx;
    margin: 9rpx 0;
}
.info-price{
    margin-right: 55rpx;
    font-size: 32rpx;
    color: #FF0054;
}
.info-operate{
    display: flex;
}
.info-operate .operate-btn{
    padding: 10rpx;
}
.promotion-text{
    padding: 10rpx 40rpx;
    text-align: right;
    color: #FF0054;
}